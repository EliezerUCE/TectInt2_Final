@model IEnumerable<Noticias.Admin.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Lista de Categorías</h2>
    <a asp-action="Create" class="btn btn-success">+ Nueva Categoría</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>