@model Noticias.Admin.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>¿Está seguro de eliminar este usuario?</h2>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Rol:</strong> @Model.Rol</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>