@model Noticias.Admin.Models.Noticia

@{
    ViewData["Title"] = "Editar Noticia";
}

<h2>Editar Noticia</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>
    
    <div class="mb-3">
        <label asp-for="Contenido" class="form-label">Contenido</label>
        <textarea asp-for="Contenido" class="form-control" rows="5" required></textarea>
    </div>
    
    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoría</label>
        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias" required></select>
    </div>
    
    <div class="mb-3">
        <label asp-for="PaisId" class="form-label">País</label>
        <select asp-for="PaisId" class="form-select" asp-items="ViewBag.Paises" required></select>
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>