@model Noticias.Admin.Models.Noticia

@{
    ViewData["Title"] = "Nueva Noticia";
}

<h2>Crear Nueva Noticia</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Titulo" class="form-label">Título</label>
        <input asp-for="Titulo" class="form-control" required />
    </div>
    
    <div class="mb-3">
        <label asp-for="Contenido" class="form-label">Contenido</label>
        <textarea asp-for="Contenido" class="form-control" rows="5" required></textarea>
    </div>
    
    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoría</label>
        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias" required>
            <option value="">Seleccione una categoría</option>
        </select>
    </div>
    
    <div class="mb-3">
        <label asp-for="PaisId" class="form-label">País</label>
        <select asp-for="PaisId" class="form-select" asp-items="ViewBag.Paises" required>
            <option value="">Seleccione un país</option>
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>