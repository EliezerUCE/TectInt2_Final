@model IEnumerable<Noticias.Admin.Models.Noticia>

@{
    ViewData["Title"] = "Noticias";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Lista de Noticias</h2>
    <a asp-action="Create" class="btn btn-success">+ Nueva Noticia</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Categoría</th>
            <th>País</th>
            <th>Autor</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var noticia in Model)
        {
            <tr>
                <td>@noticia.Id</td>
                <td>@noticia.Titulo</td>
                <td>@noticia.Categoria?.Nombre</td>
                <td>@noticia.Pais?.Nombre</td>
                <td>@noticia.Usuario?.Nombre</td>
                <td>@noticia.FechaPublicacion.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@noticia.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@noticia.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>