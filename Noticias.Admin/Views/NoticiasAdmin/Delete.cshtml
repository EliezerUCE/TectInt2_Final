@model Noticias.Admin.Models.Noticia

@{
    ViewData["Title"] = "Eliminar Noticia";
}

<h2>¿Está seguro de eliminar esta noticia?</h2>

<div class="card">
    <div class="card-body">
        <h5>@Model.Titulo</h5>
        <p><strong>Categoría:</strong> @Model.Categoria?.Nombre</p>
        <p><strong>País:</strong> @Model.Pais?.Nombre</p>
        <p><strong>Fecha:</strong> @Model.FechaPublicacion.ToString("dd/MM/yyyy HH:mm")</p>
        <p>@Model.Contenido</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>